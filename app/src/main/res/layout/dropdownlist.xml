<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="dreamlinedesign.winecognoscenti.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/SelectBox"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_string"
        android:textColor="#060505"
        android:textSize="19dp"
        android:layout_alignBaseline="@+id/create"
        android:layout_alignBottom="@+id/create"
        android:layout_toEndOf="@+id/create"
        android:layout_toRightOf="@+id/create"
        android:layout_marginLeft="5dp" />


    <Button android:id="@+id/create"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:drawable/ic_menu_more"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>